{{>layout/header}}

<main class="form-container">
    <h2>Neues Feedback abgeben</h2>

    <form method="post" action="./feedback/new">
        {{>snippet/csrfToken}}
        <label for="moduleId">Modul:</label>
        <select name="moduleId" required>
            {{#modules}}
                <option value="{{id}}">{{name}}</option>
            {{/modules}}
        </select>
<!--
        <label for="semester">Semester:</label>
        <select name="semester" required>
            <option value="Sommersemester 25">Sommersemester 25</option>
            <option value="Wintersemester 24/25">Wintersemester 24/25</option>
        </select>
-->

        <label for="content">Dein Feedback:</label>
        <textarea name="content" rows="6" placeholder="Was lief gut? Was könnte besser sein?" required></textarea>

        <label class="checkbox-label">
            <input type="checkbox" name="anonymous" checked />
            Feedback anonym absenden
        </label>
        <br>
        <button type="submit" class="btn signin-btn">Absenden</button>
    </form>

    <p style="margin-top: 20px;"><a href="/" class="button-startseite">Zurück zum Dashboard</a></p>
</main>

{{>layout/footer}}